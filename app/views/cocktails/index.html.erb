<h1>Cocktails</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @cocktails.each do |cocktail| %>
      <tr>
        <td>
          <% if cocktail.photo.attached? %>
            <%= cl_image_tag cocktail.photo.key, height: 100, width: 100, crop: :thumb %>
          <% end %>
        </td>
        <td><%= link_to cocktail.name, cocktail_path(cocktail) %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>
<%= link_to "+ Add Cocktail", new_cocktail_path %>