<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @cocktail.name %>
</p>
<% if @cocktail.photo.attached? %>
  <%= cl_image_tag @cocktail.photo.key, height: 300, width: 400, crop: :fill %>
<% end %>

<% @cocktail.doses.each do |dose| %>
  <p>
    <%= "#{dose.description} - #{dose.ingredient.name}" %>
    <small><%= link_to 'delete', 
               cocktail_dose_path(@cocktail.id, dose.id), 
               method: :delete,
               data: { confirm: "Are you sure?" } %></small>
    <hr>
  </p>
<% end %>


<%= link_to 'Back', cocktails_path %>
<br>
<%= link_to '+ Add a new dose', new_cocktail_dose_path(@cocktail) %>